<html>
    <head>
        <meta charset="utf-8">

        <style>
            .outer
            {
                margin-top: 100px;
                text-align: center;
            }

            .inter
            {
                width: 500px;
                margin-top: 50px;
                margin-left: auto;
                margin-right: auto;
            }

            .enter
            {
                margin-top: 25px;
            }

            .title
            {
                width: 100%;
                padding: 15px;
                font-size: 90%;
                font-family: Consolas, "courier new";
                border: 1px solid #ddd;
            }

            .content
            {
                width: 100%;
                height: 300px;
                padding: 15px;
                margin-top: 25px;
                font-size: 90%;
                font-family: Consolas, "courier new";
                border: 1px solid #ddd;
                resize: none;
            }

            .submit
            {
                float: right;
            }
        </style>
    </head>

    <body>
        <h1 class="outer">
            New Post
        </h1>

        <form action="/add" method="post" class="inter" id="inter">
            <input type="text" placeholder="Title" name="title" class="title">

            <textarea placeholder="Content" name="content" class="content"></textarea>

            <div class="enter">
                <a href="/">
                    cancel
                </a>

                <a href="#" onclick="document.getElementById('inter').submit()" class="submit">
                    submit
                </a>
            </div>
        </form>
    </body>
</html>
